<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/risk_background"
    android:layout_gravity="center"
    tools:context="com.example.anjukakoralage.sdgpresit.LoginActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:src="@drawable/logotest"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


       <LinearLayout
           android:layout_width="500dp"
           android:layout_height="500dp"
           android:gravity="center"

           android:weightSum="1"
           android:layout_below="@+id/imageView"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true"
           android:layout_above="@+id/backBTN">

           <TextView
               android:id="@+id/textView"
               android:layout_width="297dp"
               android:gravity="center"
               android:layout_height="match_parent"
               android:layout_below="@+id/imageView"
               android:layout_centerHorizontal="true"
               android:layout_weight="0.72"
               android:text="Incident Manager, version 1.1.0.0 , 2017
    Database Server: AWS|Glass Fish
    Database: FierBasew
    Web Server: GlassFish

    Copyright © 2017 Incident Management System. All rights reserved. Portions of any products we use in order to run or develop IM® listed. All rights reserved. For end user license agreement please contact Anjuka Koralage Group.
     "
               android:textColor="#ffff"
               android:textSize="20dp" />

       </LinearLayout>



    <ImageButton
        android:id="@+id/backBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/ic_home_black_24dp"
        android:onClick="onclick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />





</RelativeLayout>
