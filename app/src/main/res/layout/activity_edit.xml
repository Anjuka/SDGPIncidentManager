<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/risk_background"
    android:layout_gravity="center"
    tools:context="com.example.anjukakoralage.sdgpresit.LoginActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Incident "
        android:gravity="center"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#FFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout

            android:id="@+id/lay_LinearLogin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="1">



            <EditText
                android:layout_margin="15dp"
                android:id="@+id/ID"
                android:textColorHint="#ffffff"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID"
                android:inputType="number"
                android:textColor="#ffff"/>

            <EditText
                android:layout_margin="15dp"
                android:inputType="text"
                android:textColorHint="#ffffff"
                android:hint="Reporter Name "
                android:id="@+id/reporterName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffff"

                />




            <EditText
                android:layout_margin="15dp"
                android:inputType="text"
                android:textColorHint="#ffffff"
                android:hint="Type "
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffff" />

            <EditText
                android:layout_margin="15dp"
                android:textColorHint="#ffffff"
                android:inputType="text"
                android:hint="Responsible Person | Authority  "
                android:id="@+id/responser"
                android:textColor="#ffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />




            <EditText
                android:layout_margin="15dp"
                android:inputType="textMultiLine"
                android:hint="Note :"
                android:textColorHint="#ffffff"
                android:id="@+id/note"
                android:textColor="#ffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_weight="1">


                <EditText


                    android:id="@+id/date"
                    android:textColorHint="#ffffff"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textColor="#ffff"
                    android:hint="Date"
                    android:inputType="date"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp" />
                <EditText

                    android:id="@+id/time"
                    android:textColorHint="#ffffff"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="#ffff"
                    android:hint="Time"
                    android:inputType="time"
                    android:layout_alignBaseline="@+id/date"
                    android:layout_alignBottom="@+id/date"
                    android:layout_toRightOf="@+id/date"
                    android:layout_toEndOf="@+id/date" />

            </RelativeLayout>

            <ImageButton
                android:id="@+id/editBTN"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:background="@drawable/edited"
                />


        </LinearLayout>



    </RelativeLayout>


</RelativeLayout>
